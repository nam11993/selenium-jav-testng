<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CompleteCryptoDepositTestSuite">
    
    <!-- Functional Tests -->
    <test name="Crypto Deposit Functional Tests">
        <classes>
            <class name="com.browserstack.CryptoDepositTest">
                <methods>
                    <include name="testAccessDepositCryptoPage"/>
                    <include name="testSelectCryptocurrency"/>
                    <include name="testSelectNetwork"/>
                    <include name="testGenerateDepositAddress"/>
                    <include name="testCopyDepositAddress"/>
                    <include name="testDepositAddressValidation"/>
                    <include name="testDepositAddressErrorHandling"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Performance Tests -->
    <test name="Crypto Deposit Performance Tests">
        <classes>
            <class name="com.browserstack.CryptoDepositPerformanceTest">
                <methods>
                    <include name="testDepositAddressGenerationPerformance"/>
                    <include name="testMultipleCryptoAddressGeneration"/>
                    <include name="testConcurrentAddressGeneration"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
